@using TeamStatusData.Enums
@model IEnumerable<TeamStatusData.Models.User>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>Dashboard</title>
    <style>
        .pulsing-light {

            /* Optional styling for the alert container */

        }

        .pulsing-indicator {

            display: inline-block;

            width: 10px;

            height: 10px;

            background-color: red;

            border-radius: 50%;

            animation: pulse 1s ease-in-out infinite;

        }

        @@keyframes pulse {

            0% { opacity: 1; }

            50% { opacity: 0.5; }

            100% { opacity: 1; }

        }
    </style>
</head>
<body>
<div class="container">
    <div class="row row-cols-xl-5 row-cols-md-3 row-cols-sm-6 row-cols-xs-12">
        @foreach (var user in @Model)
        {
            <div class="col">
                <div id="user-@user.Id" class="card mb-4 d-flex flex-column">
                    <img src="profile-circle-svgrepo-com.svg" class="card-img-top" alt="@user.Name">
                    <div class="card-body flex-grow-1">
                        <h5 class="card-title">@user.Name</h5>
                        <p class="card-text">@user.Status</p>
                        @if (@user.Status == UserStatus.Meeting)
                        {
                            <span class="pulsing-indicator"></span>
                        }
                        <form method="post">
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <label asp-for="@user.Status">Change Status: </label>
                                </div>
                                <div class="col-sm-6">
                                    <select asp-items="Html.GetEnumSelectList<UserStatus>()"
                                            class="form-control" name="UserStatus">
                                        <option value="">---</option>
                                    </select>
                                </div>
                            </div>
                            <button asp-action="UpdateUserStatus" asp-route-userId="@user.Id" type="submit"
                                    class="btn btn-primary">Update Status
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
</body>
</html>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script>
    const connection = new signalR.HubConnectionBuilder()
        .withUrl("/userStatusHub")
        .build();

    connection.on("UpdateUserStatus", (userId, status) => {
        // Find the element for the updated user and update the status text
        const userCard = document.getElementById(`user-${userId}`);
        if (userCard) {
            const statusElement = userCard.querySelector('.card-text');
            statusElement.textContent = status;
        }

        // Update the dropdown value in the corresponding form
        const userForm = document.querySelector(`#user-${userId} form`);
        if (userForm) {
            const statusSelect = userForm.querySelector('select[name="UserStatus"]');
            statusSelect.value = status; // Set the selected value to the new status
        }
    });

    connection.start().catch(err => console.error(err.toString()));

    // Add an event listener to each form to send the updated status to the server
    const forms = document.querySelectorAll('form');
    forms.forEach(form => {
        form.addEventListener('submit', async function (event) {
            const userId = this.querySelector('input[type="hidden"]').value;
            const status = this.querySelector('select[name="UserStatus"]').value;

            try {
                await connection.invoke("UpdateUserStatus", userId, status);
            } catch (err) {
                console.error(err.toString());
            }
        });
    });
</script>